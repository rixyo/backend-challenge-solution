{
  "compilerOptions": {
    "target": "ES2020", // The target ECMAScript version
    "module": "commonjs", // Use CommonJS module system
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Fixes default imports for CommonJS modules
    "skipLibCheck": true, // Skip type-checking of declaration files
    "outDir": "./dist", // Output directory for transpiled files
    "typeRoots": ["./node_modules/@types", "./src/types"], // Type definition files
    "noUnusedLocals": false,
    "types": ["node", "express", "jest"], // Type declaration files to be included in compilation
    "noUnusedParameters": false
  },
  "include": ["src/**/*", "src/types/global.d.ts", "tests/**/*", "tests"], // Include all files in the src folder
  "exclude": ["node_modules"] // Exclude node_modules folder
}
